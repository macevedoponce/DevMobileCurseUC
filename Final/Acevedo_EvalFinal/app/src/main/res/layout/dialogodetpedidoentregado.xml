<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logorepartidor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Media"
                    android:textSize="32sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/secondary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/App"
                    android:textSize="32sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2022-12-02"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="13sp"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/imgPersona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/repartidor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtNombrePersona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acevedo Ponce miguel angel"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"/>


                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/NumCelular"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/txtCelular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="958457812"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/txtProducto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="aspirina 550 lasdmjhlkasdjlkasd"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/cantidad"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/txtCantidad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="2"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/TotalPagar"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/txtTotal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="5.00"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="12sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAceptarRegistroExitoso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_secondary"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="@string/Aceptar"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>