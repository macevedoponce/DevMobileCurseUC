<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".InsertarPelicula">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PELICULA"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"/>
    <EditText
        android:id="@+id/edtIdPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:inputType="number"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/edtNombrePelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NOMBRE"
        android:inputType="text"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/edtDescripcionPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DESCRIPCIÓN"
        android:inputType="text"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/edtAnioPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AÑO"
        android:inputType="date"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/edtDuracionPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DURACIÓN"
        android:inputType="datetime"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/edtGeneroPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GENERO"
        android:inputType="text"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btnRegistrarPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="REGISTRAR PELICULA"/>

</LinearLayout>