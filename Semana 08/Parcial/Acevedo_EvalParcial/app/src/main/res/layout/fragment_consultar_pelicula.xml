<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".ui.consultar.ConsultarPelicula">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="consultar pelicula"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:gravity="center"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTitlePeliculaConsulta"
        style="@style/Base.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:helperText="Requerido"
        app:startIconDrawable="@drawable/ic_titulo_pelicula">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTitlePeliculaConsulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la pelicula"
            android:inputType="textAutoCorrect" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnBuscarPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"/>

    <ImageView
        android:id="@+id/imgPelicula"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_base"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnAddComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="aÃ±adir comentario"
        />
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:textAlignment="inherit"
            android:text=""
            android:textSize="15sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txtYear"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txtDirector"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="italic"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"/>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>


